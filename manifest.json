{
  "manifest_version": 2,
  "name": "VG Plus Blocker",
  "version": "1.0",
  "description": "Blocks subscription articles (VG+) on vg.no",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.vg.no/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}